{
  "name": "css-factory",
  "version": "3.0.0",
  "description": "A simple tool to make CSS files cleaned, linted, prefixed, prettified, RTL-ized and minified, all together, just with one command.",
  "type": "module",
  "main": "gulpfile.js",
  "keywords": [
    "css",
    "less",
    "clean",
    "lint",
    "prefix",
    "prety",
    "rtl",
    "minify"
  ],
  "author": "Arash Laylazi (https://github.com/PerseusTheGreat)",
  "license": "ISC",
  "scripts": {
    "update": "ncu -u && npm install -f && npm audit fix -f && npm rebuild -f",
    "empty": "gulp clean-up-files",
    "prelint": "gulp pre-lint-css",
    "clean": "gulp clean-css",
    "lint": "gulp lint-css",
    "prefix": "gulp prefix-css",
    "prettify": "gulp prettify-css",
    "minify": "gulp minify-css",
    "build": "gulp build-css",
    "quick": "gulp quick-build-css",
    "less": "gulp quick-build-less"
  },
  "devDependencies": {
    "autoprefixer": "10.4.19",
    "gulp": "5.0.0",
    "gulp-autoprefixer": "9.0.0",
    "gulp-clean-css": "4.3.0",
    "gulp-clean-dir": "1.0.2",
    "gulp-dest": "0.2.2",
    "gulp-less": "5.0.0",
    "gulp-prettier": "6.0.0",
    "gulp-rename": "2.0.0",
    "gulp-rtlcss": "2.0.0",
    "gulp-strip-comments": "2.6.0",
    "gulp-stylelint": "npm:@ronilaukkarinen/gulp-stylelint@14.1.2",
    "stylelint": "15.11.0",
    "stylelint-config-twbs-bootstrap": "12.0.0"
  }
}
